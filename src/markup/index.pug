doctype html
html(lang="en")
    head
        title Clock
        link(rel="stylesheet" href="./index.css")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
    body
        .clock-container(data-status="off" data-show-settings="false")
            .always-visible
                .time
                    span.hour-minute 6:00
                    span.am-pm AM
                .on-off
                    .slider
                        span.on-text ON
                        span.off-text OFF
            .hide-control
                .hide-subject
                    input(type="text" placeholder="Label").clock-name
                    label
                        input(type="checkbox" name="repeat").repeat
                        span.checkmark
                            <svg height="32" id="check" viewBox="0 0 32 32" width="32" xmlns="http://www.w3.org/2000/svg"><path d="M1 14 L5 10 L13 18 L27 4 L31 8 L13 26 z"/></svg>
                        span REPEAT
                    .repeat-days
                        .day SUN
                        .day MON
                        .day TUE
                        .day WED
                        .day THU
                        .day FRI
                        .day SAT
                    .song
                        .music
                            <svg height="94px" id="Capa_1" style="enable-background:new 0 0 58 94;" version="1.1" viewBox="0 0 58 94" width="58px" xml:space="preserve" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink"><g><path d="M37.992,0h-8.021v65.358c-4.435-1.706-10.174-1.73-15.835,0.328C3.994,69.377-2.049,78.355,0.638,85.736   c2.688,7.383,13.088,10.374,23.229,6.683c8.614-3.134,14.249-10.082,14.111-16.626l0.014-53.451   c13.986,2.204,14.943,19.884,13.268,24.842c-0.636,1.879,0.484,3.286,2.598,0C68.938,23.726,37.992,13.376,37.992,0z"/></g><g/><g/><g/><g/><g/><g/><g/><g/><g/><g/><g/><g/><g/><g/><g/></svg>
                            span OXYGEN
                        label
                            input(type="checkbox" name="vibrate").vibrate
                            span.checkmark
                                <svg height="32" id="check" viewBox="0 0 32 32" width="32" xmlns="http://www.w3.org/2000/svg"><path d="M1 14 L5 10 L13 18 L27 4 L31 8 L13 26 z"/></svg>
                            span VIBRATE
                .hide-button
                    <svg class="show-details" height="512px" id="Layer_1" style="enable-background:new 0 0 512 512;" version="1.1" viewBox="0 0 512 512" width="512px" xml:space="preserve" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink"><polygon points="160,115.4 180.7,96 352,256 180.7,416 160,396.7 310.5,256 "/></svg>
                    .clock-name-minimized
                    .days-name-minimized
                .line-separator
            .delete-field
                <svg height="512px" id="Layer_1" style="enable-background:new 0 0 512 512;" version="1.1" viewBox="0 0 512 512" width="512px" xml:space="preserve" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink"><g><path d="M413.7,133.4c-2.4-9-4-14-4-14c-2.6-9.3-9.2-9.3-19-10.9l-53.1-6.7c-6.6-1.1-6.6-1.1-9.2-6.8c-8.7-19.6-11.4-31-20.9-31   h-103c-9.5,0-12.1,11.4-20.8,31.1c-2.6,5.6-2.6,5.6-9.2,6.8l-53.2,6.7c-9.7,1.6-16.7,2.5-19.3,11.8c0,0-1.2,4.1-3.7,13   c-3.2,11.9-4.5,10.6,6.5,10.6h302.4C418.2,144.1,417,145.3,413.7,133.4z"/><path d="M379.4,176H132.6c-16.6,0-17.4,2.2-16.4,14.7l18.7,242.6c1.6,12.3,2.8,14.8,17.5,14.8h207.2c14.7,0,15.9-2.5,17.5-14.8   l18.7-242.6C396.8,178.1,396,176,379.4,176z"/></g></svg>
            
            .settings-wrapper
                .clock-settings(data-am-pm="am" data-hour="6" data-minute="0" data-select="hour" data-skip-animation="false")
                    .time-container
                        span.hour 6
                        span.separator :
                        span.minute 00
                        span.am AM
                        span.pm PM
                    .disc-container
                        .am-button AM
                        .hour-disc(data-active="false")
                            - var n = 1
                            while n <= 12
                                .hour= n++
                            - var n = -5
                            while (n += 5) < 60
                                .minute= (n < 10 ? '0' + n : n)
                            .hour-selector-disc
                                .dot
                            .hour-selector-axis
                            .minute-selector-disc
                                .dot
                            .minute-selector-axis
                        .pm-button PM
                    .done-container
                        span Done
        script(src="bundle.js")